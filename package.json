{
  "name": "cv-generator-monorepo",
  "version": "1.0.0",
  "private": true,
  "packageManager": "npm@11.4.2",
  "scripts": {
    "build": "turbo build",
    "prebuild": "npm run clean",
    "build:web": "turbo run build --filter=@cv-generator/web...",
    "vercel-build": "npm install -w apps/web tailwindcss-animate framer-motion @google/genai puppeteer && turbo run build",
    "dev": "npm run dev:all",
    "dev:turbo": "turbo dev",
    "dev:all": "concurrently \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:api": "cd apps/api && npm run dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "build:packages": "turbo run build --filter='./packages/*'"
  },
  "devDependencies": {
    "@types/node": "^20.6.2",
    "concurrently": "^9.2.0",
    "turbo": "^2.5.4",
    "typescript": "^5.2.2"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@google/genai": "^1.17.0",
    "axios": "^1.10.0",
    "framer-motion": "^12.18.1",
    "pdfkit": "^0.17.2",
    "puppeteer": "^24.19.0",
    "tailwindcss-animate": "^1.0.7"
  }
}
